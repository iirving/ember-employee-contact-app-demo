{{#sub-header-with-back-link}}
  Employee Detail
{{/sub-header-with-back-link}}

<div class="col-md-4">

  <div class="row">
      <span data-test-employee-detail-full-name-label>Name:  </span>
      <span data-test-employee-detail-full-name>{{employee.fullName}}</span>
  </div>
  <div class="row">Email: <span data-test-employee-detail-email>{{employee.email}}</span></div>
  <div class="row">Tel: {{employee.phoneNumber}}</div>
  <div class="row">Dept: {{employee.department}}</div>

   <div class="row">

    {{#link-to 'employee.edit' employee.id
              tagName='button'
              class="btn btn-default active"
              data-test-employee-edit-link=true }}EDIT{{/link-to}}
  </div>
</div>
